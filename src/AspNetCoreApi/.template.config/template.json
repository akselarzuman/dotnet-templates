{
    "$schema": "http://json.schemastore.org/template",
    "author": "Aksel Arzuman",
    "classifications": ["Web", "Api"],
    "identity": "AkselArzuman.Dotnet.Api",
    "name": "Web Api Application",
    "shortName": "netcore-api",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "Aksel.Api",
    "primaryOutputs": [
        { "path": "Aksel.sln" }
    ],
    "preferNameDirectory": true,
    "symbols": {
        "includetests": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "includedocker": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "projectname": {
            "type": "parameter",
            "datatype": "text",
            "fileRename": "Aksel",
            "isRequired": true,
            "replaces": "Aksel"
        }
    },
    "sources": [{
        "modifiers": [{
                "condition": "(!includetests)",
                "exclude": ["Aksel.Tests/**/*"]
            },
            {
                "condition": "(!includedocker)",
                "exclude": ["Dockerfile"]
            }
        ]
    }]
}